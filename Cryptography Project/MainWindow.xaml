<Window x:Class="Cryptography_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cryptography_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TBInput" HorizontalAlignment="Left" Height="185" Margin="10,10,0,0" TextWrapping="Wrap" Text="Input" VerticalAlignment="Top" Width="772" SpellCheck.IsEnabled="True" FontFamily="Arial" FontSize="24">
            <TextBox.Effect>
                <DropShadowEffect BlurRadius="10" RenderingBias="Quality" Direction="-5" ShadowDepth="2"/>
            </TextBox.Effect>
        </TextBox>
        <Button Content="Translate" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top" Width="75" Click="Button_Translate_Click"/>
        <TextBox x:Name="TBOutput" HorizontalAlignment="Left" Height="185" Margin="10,224,0,0" TextWrapping="Wrap" Text="Output" VerticalAlignment="Top" Width="772" FontFamily="Arial" FontSize="24">
            <TextBox.Effect>
                <DropShadowEffect BlurRadius="10" RenderingBias="Quality" Direction="-5" ShadowDepth="2"/>
            </TextBox.Effect>
        </TextBox>
    </Grid>
</Window>
